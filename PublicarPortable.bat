echo [2/3] ?? PUBLICANDO VERSIÓN PORTABLE...
echo ???????????????????????????????????????????????????????????????????????????
echo.
echo Ejecutando comando dotnet publish...
echo.

dotnet publish restaurante\restaurante.csproj ^
    -c Release ^
    -r win-x64 ^
    --self-contained true ^
    -p:PublishSingleFile=false ^
    -p:PublishTrimmed=false ^
    -p:PublishReadyToRun=false ^
    -o VersionPortable

if %ERRORLEVEL% NEQ 0 (
    echo.
    echo ? ERROR: Falló la publicación
    echo.
    pause
    exit /b 1
)

echo.
echo ? Publicación exitosa
timeout /t 2 /nobreak >nul

